{% extends "::main.html.twig" %}
{% block content %}
    <!-- start Main Wrapper -->
    <div class="main-wrapper">

        <!-- start end Page title -->
        <div class="page-title" style="background-image:url('/bundles/projectadmin/front/images/hero-header/breadcrumb.jpg');">



        </div>
        <!-- end Page title -->

        <div class="content-wrapper">
            <div class="section pt-60 pb-0">

                <div class="container">

                    <div class="row">

                        <div class="col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">

                            <div class="section-title">

                                <h3>Upload Product Picture</h3>

                            </div>

                        </div>

                    </div>

                    <form method="POST" class="contact-form-wrapper" {{ form_enctype(form) }}>

                        <div class="row">

                            <div class="col-sm-4">

                                {#{% if not user.path %}
                                    <img class="img-thumbnail img-responsive" src="{{asset('uploads/images/default.png')}}" style="width: 150px; height: 150px" />
                                {% else %}
                                    <img class="img-thumbnail img-responsive" src="{{asset('uploads/images/'~user.path)}}" style="width: 150px; height: 150px" />
                                {% endif %}#}

                            </div>

                            <div class="col-sm-8">

                                <div class="row">

                                    <div class="col-sm-6">

                                        <div class="form-group">
                                            <label for="">Upload Picture </label>
                                            {{form_widget(form.file,{"attr":{"class":"form-control"}})}}

                                        </div>

                                        {{form_rest(form)}}
                                        <button type="submit" class="btn btn-primary mt-5">Upload</button>
                                    </div>
                                </div>

                            </div>

                        </div>

                    </form>
                    <div class="row">

                        <div class="col-sm-4">

                            {#{% if not user.path %}
                                <img class="img-thumbnail img-responsive" src="{{asset('uploads/images/default.png')}}" style="width: 150px; height: 150px" />
                            {% else %}
                                <img class="img-thumbnail img-responsive" src="{{asset('uploads/images/'~user.path)}}" style="width: 150px; height: 150px" />
                            {% endif %}#}

                        </div>

                        <div class="col-sm-8">
                            <hr>
                            <div class="row">
                                {% for image in images %}
                                    <div class="col-sm-12">
                                        {% if not image.path %}
                                            <img class="img-thumbnail img-responsive" src="{{asset('uploads/productImages/no_profile.png')}}" style="width: 300px; height: 250px" />
                                        {% else %}
                                            <img class="img-thumbnail img-responsive" src="{{asset('uploads/productImages/'~image.path)}}" style="width: 300px; height: 250px" />
                                        {% endif %}
                                        <a href="{{path('project_user_product_delete_image',{'id':image.id,'productId':productId})}}" style="padding-left: 40px"><img class="img-thumbnail img-responsive" src="{{asset('uploads/images/button_cancel.png')}}" style="width: 64px; height: 64px" /></a>
                                    </div>
                                {% endfor %}
                            </div>

                        </div>

                    </div>
                </div>

            </div>

        </div>


    </div>

{% endblock %}
